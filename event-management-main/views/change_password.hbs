<div class="m-auto rounded border set_new_password">
	<p class="h5 bg-dark text-light text-center py-3 text-uppercase">CHANGE PASSWORD</p>
	<form id="change_password" class="px-4">
		<input type="hidden" name="_token" value="{{_token}}">
		<p class="m-0 my-3 py-2 alert alert-danger h6 error_msg d-none text-capitalize"></p>
		<div class="form-group mb-2">
			<label class="form-label m-0 h6">Old Password</label>
			<input class="form-control" type="password" name="old_password">
		</div>
		<div class="form-group mb-2">
			<label class="form-label m-0 h6">New Password</label>
			<input class="form-control" type="password" name="new_password">
		</div>
		<div class="form-group mb-2">
			<label class="form-label m-0 h6">Confirm Password</label>
			<input class="form-control" type="password" name="confirm_password">
		</div>
		<button class="my-3 btn btn-warning w-100"><span class="h6">CHANGE</span></button>
	</form>
</div>

<script>
	$('#change_password').submit(function(e){
		e.preventDefault();
		$.ajax({
			url : '/change_password',
			method : 'PUT',
			data : $(this).serialize(),
			success : function(res){
				$('.error_msg').addClass('d-none').text('');
				$('#change_password').trigger('reset');
				swal('Password change successfully...','','success');
			},
			error : function(xhr, status, error){
				$('.error_msg').removeClass('d-none').text(xhr.responseJSON.message);
			}
		});
	});
</script>