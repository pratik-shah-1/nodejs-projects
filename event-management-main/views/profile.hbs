<div class="profile border rounded m-auto">
	<p class="m-0 bg-dark text-center text-light py-3 h5">PROFILE</p>
	<form id="profile" class="px-4 py-3">
		<input type="hidden" name="_token" value="{{_token}}">
		<p class="m-0 mb-2 py-2 alert alert-danger h6 error_msg d-none text-capitalize"></p>
		<div class="form-group">
			<label class="m-0 h6" for="">Full Name <span class="text-danger">*</span></label>
			<input class="form-control" type="text" name="name" value="{{person.name}}">
		</div>
		<div class="form-group">
			<label class="m-0 h6" for="">Email Address <span class="text-danger">*</span></label>
			<input class="form-control" type="text" name="email" value="{{person.email}}" readonly>
		</div>
		<div class="form-group">
			<label class="m-0 h6" for="">Mobile Number <span class="text-danger">*</span></label>
			<input class="form-control" type="text" name="mobile" value="{{person.mobile}}">
		</div>
		<div class="form-group">
			<label class="m-0 h6" for="">Password <span class="text-danger">*</span></label>
			<input class="form-control" type="password" name="password" placeholder="Enter Your Password">
		</div>
		<button class="w-100 btn btn-warning"><span class="h6">CHANGE</span></button>
		<div class="pt-3 d-flex align-items-center justify-content-center">
			<a href="/change_password">Change Password?</a>
		</div>
	</form>
</div>


<script>
	$('#profile').submit(function(e){
		e.preventDefault();
		$.ajax({
			url : '/profile',
			method : 'PUT',
			data : $(this).serialize(),
			success : function(res) {
				if(res){
					$('.error_msg').addClass('d-none').text('');
					swal('Update Profile Successfully...','','success');
				}
			},
			error : function(xhr, status, err){
				$('.error_msg').removeClass('d-none').text(xhr.responseJSON.message);
			}
		});
	});
</script>