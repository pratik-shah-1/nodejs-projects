<div class="certificate">
	<div class="certificate_logo">
		<i class="fas fa-award text-warning"></i>
	</div>
	<div class="certificate_bubble"></div>
	<div class="mt-5">
		<p class="display-4 text-center">{{data.student.name}}</p>
	</div>
	<div class="mt-5 px-5">
		<p class="h3 text-center font-weight-normal" style="line-height:50px;">has particiapated in 
			<span style="font-weight:500">{{data.event.name}}</span>
			event which is<span style="font-weight:500"></span> held at VGEC, Chandkheda
		</p>
	</div>
</div>

<div class="d-flex mb-5 justify-content-center">
	<button class="btn btn-sm btn-primary" onclick="print_certificate()">
		<span class="h6">PRINT</span>
	</button>
</div>

<script>
	function print_certificate(){
		const full_body = document.body.outerHTML;
		document.body.innerHTML = $('.certificate')[0].outerHTML;
		window.print(); 
		document.body.outerHTML = full_body;
	}
</script>